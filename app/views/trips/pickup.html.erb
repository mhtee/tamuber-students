<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<%= javascript_include_tag("pickup") %>
<body>
    <h1> Go to pickup location </h1>
    
    <div id="mapid" data-test-env="<%= Rails.env.test? %>"></div>
    
    <table>
        <tr>
            <td><strong> Pickup location </strong></td>
            <td><%= @route.startPoint %></td>
        </tr>
        <tr>
            <td><strong> Destination </strong></td>
            <td><%= @route.endPoint %></td>
        </tr>
        <tr>
            <td><strong> Cart Number </strong></td>
            <td>TBD</td>
        </tr>
        <tr>
            <td><strong>ETA</strong></td>
            <td>TBD</td>
        </tr>
    </table>
    
    <button type="button" onclick="calcRoute(<%= @start.lat %>, <%= @start.lng %>)">Toggle directions</button>
    <button type="button" onclick="alert('starting')">Start</button>
    
    <script type="text/javascript">
      initMapWithMarker(<%= @start.lat %>, <%= @start.lng %>, '<%= @route.startPoint %>') // this is your function in .js file
    </script>
</body>
